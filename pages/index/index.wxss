/**index.wxss**/

/**侧滑栏信息**/
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 124rpx;
}

.userinfo-avatar {
  width: 84rpx;
  height: 84rpx;
  margin: 20rpx 0 20rpx 32rpx;
  border-radius: 50%;
}
.userinfo-avatar-default{
  width: 84rpx;
  height: 84rpx;
  margin: 20rpx 32rpx 20rpx 32rpx;
  border-radius: 50%;
  float: left;
  font-size: 34rpx;
}
.userinfo-nickname {
  color: #9a9fa5;
  font-size: 34rpx;
  margin-left: 34rpx;
}
.confirm-btn {
  height: 80rpx;
  padding: 0;
  margin: 10rpx 0 0 0;
  font-size: 40rpx;
  background: #232a32;
  color: #9a9fa5;
  text-align:center;
  vertical-align:middle ;
}
.confirm-btn::after{
  border: none;
}
.confirm-btn:active {
  opacity: .8;
}

.icon-nav{
  display: flex;
  flex-direction: row;
}
.star-info,.bell-info,.setting-info{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  color: #9a9fa5;
  font-size: 22rpx;
}
.star-info{
  margin-left: 32rpx;
}
.bell-info,.setting-info{
  margin-left: 118rpx;
}
.star-icon,.bell-icon,.setting-icon{
  width: 48rpx;
  height: 48rpx;
}
.star-text,.bell-text,.setting-text{
  margin-top: 14rpx;
  text-align: center;
}

/* 日报列表 */
.item-home{display: flex;flex-direction: row;align-items: center;padding: 42rpx 0; border-top: 1px solid #1b222a;background: #232a32;}
.item-home-img{margin-left: 38rpx; width: 48rpx;height: 48rpx;}
.item-home-name{margin-left: 32rpx;flex: 1;font-size: 34rpx;color: #fff;}
.item-home-img-right{margin-right: 88rpx;width: 42rpx;height: 42rpx;}

.themes-list{ display: flex;flex-direction: row;align-items: center; border-top: 1px solid #1b222a; }
.themes-list-box{ display: block;}
.themes-list-name{ margin-left: 38rpx; flex: 1;font-size: 34rpx;color: #9a9fa5; padding: 42rpx 0;}
.themes-list-img{margin-right: 88rpx;width: 42rpx;height: 42rpx;}
.scroll-boxs{ display: block;height: 954rpx}


/**正文**/
.mpage {
  z-index: 10;
  position: fixed;
  bottom: 0;
  top: 0;
  background-color: #fff;
}

/**swiper**/
.page-section{
  width: 100%;
  position: relative;
}
.page-section-spacing{
  box-sizing: border-box;
}
.swiper-item{
  display: block;
}
.swiper-img{
  width: 100%;
  height: 518rpx;
}
.menu-info{
  position: absolute;
  top: 66rpx;
  left: 28rpx;
}
.menu-icon{
  position: absolute;
  top: 20rpx;
  left: 28rpx;
  width: 48rpx;
  height: 48rpx;
}
.swiper-text{
  position: absolute;
  top: 345rpx;
  left: 28rpx;
  right: 28rpx;
  color: #fff;
  font-size: 48rpx;
}
/**home内容**/
.scroll-box{ display: block; height: 100%;}
.list-title-time{
  text-align: center; width: 750rpx;background: #01a1ed;
}
.list-title-date{
  font-size: 32rpx; height: 30px; line-height: 32px; font-weight: 400; color: #fff; padding: 5px 10px; 
}
.list-title{
  display: flex;
  flex-direction: row;
  height: 144rpx;
  padding: 28rpx 36rpx;
  border-bottom: #eee solid 2rpx;
}
.list-title-text{
  color: #232a32;
  font-size: 36rpx;
  width: 458rpx;
}
.list-title-image{
  width: 176rpx;
  height: 140rpx;
  margin-left: 58rpx;
}
.list-title-more{ text-align: center; font-size: 22rpx; color: #999; margin-bottom: 30px; }
.list-title-more image{ width: 80px; height: 16px; display: block; margin: 0 auto;}



.withAnimate {
  transition: all 300ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.search {
  background: white;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.search .avatar {
  padding: 30rpx;
}
.search .avatar image {
  width: 50rpx;
	height: 50rpx;
}

.item {
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  padding: 60rpx;
  border-bottom: 20rpx solid #dbdbdb;
}
.item image {
  height: 150rpx;
  width: 150rpx;
}
.user {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: #232a32;
  border-right: 1px solid #dbdbdb;
  box-sizing: border-box;
}
.user .user-box {
  position: absolute;
  top: 0;
  bottom: 0;
  background: #232a32;
}
.user .user-box .user-face-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #232a32;
  padding: 20rpx;
  margin-bottom: 100rpx;
}
.user .user-box .user-face {
  width: 150rpx;
	height: 150rpx;
}
.user .user-box .one-menu {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #232a32;
  color: white;
  font-size: 38rpx;
}
